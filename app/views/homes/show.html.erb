<div id="home">
  <header>
    <h1>Welcome to Shoutr</h1>
    <p>You can do anything on Shoutr. The only limitation is your imagination!</p>
  </header>

<div class="home-forms">
  <div class="home-form">
<h1>Sign up!!</h1>

    <%= form_for(@user) do |form| %>
      <div>
    	<%= form.label :email %>
    	<%= form.email_field :email %>
      </div>
      <div>
      <%= form.label :username %>
      <%= form.text_field :username %>
      </div>
       <div>
    	<%= form.label :password %>
    	<%= form.password_field :password %>
      </div>
        <%= form.submit "Sign up!!" %>
    <% end %>
 
  </div>

  <div class="home-form">
<h1>Sign in!!</h1>

    <%= form_for :session, url: session_path do |form| %>
      <div>
        <%= form.label :username %>
        <%= form.text_field :username %>
      </div>
      <div>
        <%= form.label :password %>
        <%= form.password_field :password %>
      </div>
      <div>
        <%= form.submit "Sign in" %>
      </div>
    <% end %>

  </div>
</div>
</div>